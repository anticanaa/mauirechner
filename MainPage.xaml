<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppRechner.MainPage">

    <Grid Margin="15" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

        <Label Text="Zahl 1:"/>
        <Entry Grid.Row="1" Text="{Binding Zahl1}"/>
        <Label Grid.Row="2"  Text="Zahl 2:" />
        <Entry Grid.Row="3" Text="{Binding Zahl2}"/>
        <Button Grid.Row="4" Text="Summe bilden" Command="{Binding SumCommand}"/>
        <Label Grid.Row="5" Text="{Binding Output}"/>

    </Grid>

</ContentPage>
